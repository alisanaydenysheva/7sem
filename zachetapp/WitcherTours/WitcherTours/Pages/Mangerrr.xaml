<Page x:Class="WitcherTours.Pages.Mangerrr"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WitcherTours.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Mangerrr">

    <Grid Grid.Row="1" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="16,0,0,0" Background="White">


            <Border Height="38" Width="47" Background="White" RenderTransformOrigin="0.5,0.531" Margin="0,-386,0,0">
                <Image x:Name="UserPhoto" Height="46" VerticalAlignment="Top" Margin="-7,-201,3,0"/>
            </Border>


            <TextBlock x:Name="UserTB" Text="Grossman A.S" VerticalAlignment="Top" Margin="0,0,16,0" Foreground="Black"/>
            <TextBlock x:Name="RoleTB" Text="(MainWitcher)" VerticalAlignment="Top" Foreground="Black"/>
        </StackPanel>
        <TextBlock Grid.Column="1" Name="TimeTB" Text="00:00:00" HorizontalAlignment="Right" VerticalAlignment="Top" Foreground="Black" Margin="0,0,16,0"/>
    </Grid>
</Page>
